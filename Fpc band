        let currentFilter = 'all';
        let searchTerm = '';

        function renderCalendar() {
            const container = document.getElementById('calendar-content');
            container.innerHTML = '';

            const months = currentFilter === 'all' ? Object.keys(calendarData) : [currentFilter];
            
            months.forEach(monthKey => {
                const monthData = calendarData[monthKey];
                if (!monthData) return;

                const filteredEvents = monthData.events.filter(event => {
                    if (!searchTerm) return true;
                    const searchLower = searchTerm.toLowerCase();
                    return event.title.toLowerCase().includes(searchLower) ||
                           event.date.toLowerCase().includes(searchLower) ||
                           (event.location && event.location.toLowerCase().includes(searchLower));
                });

                if (filteredEvents.length === 0 && searchTerm) return;

                const monthSection = document.createElement('div');
                monthSection.className = 'month-section';
                monthSection.id = monthKey;

                const monthTitle = document.createElement('h2');
                monthTitle.className = 'month-title';
                monthTitle.textContent = monthData.title;
                monthSection.appendChild(monthTitle);

                if (filteredEvents.length === 0) {
                    const noEvents = document.createElement('div');
                    noEvents.className = 'no-events';
                    noEvents.textContent = 'No events found';
                    monthSection.appendChild(noEvents);
                } else {
                    filteredEvents.forEach(event => {
                        const eventItem = document.createElement('div');
                        eventItem.className = 'event-item';

                        const eventDate = document.createElement('div');
                        eventDate.className = 'event-date';
                        eventDate.textContent = event.date;
                        eventItem.appendChild(eventDate);

                        const eventTitle = document.createElement('div');
                        eventTitle.className = 'event-title';
                        eventTitle.textContent = event.title;
                        eventItem.appendChild(eventTitle);

                        if (event.time) {
                            const eventTime = document.createElement('div');
                            eventTime.className = 'event-time';
                            eventTime.textContent = `â° ${event.time}`;
                            eventItem.appendChild(eventTime);
                        }

                        if (event.location) {
                            const eventLocation = document.createElement('div');
                            eventLocation.className = 'event-location';
                            eventLocation.textContent = `ðŸ“ ${event.location}`;
                            eventItem.appendChild(eventLocation);
                        }

                        monthSection.appendChild(eventItem);
                    });
                }

                container.appendChild(monthSection);
            });
        }

        function setActiveMonth(monthKey) {
            document.querySelectorAll('.month-nav').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-month="${monthKey}"]`).classList.add('active');
            currentFilter = monthKey;
            renderCalendar();
        }

        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Event listeners
        document.querySelectorAll('.month-nav').forEach(btn => {
            btn.addEventListener('click', () => {
                setActiveMonth(btn.dataset.month);
            });
        });

        document.getElementById('searchInput').addEventListener('input', (e) => {
            searchTerm = e.target.value;
            renderCalendar();
        });

        // PWA Install functionality
        let deferredPrompt;

        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            document.getElementById('installPrompt').classList.remove('hidden');
        });

        document.getElementById('installBtn').addEventListener('click', async () => {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                const { outcome } = await deferredPrompt.userChoice;
                deferredPrompt = null;
                document.getElementById('installPrompt').classList.add('hidden');
            }
        });

        // Initialize calendar
        renderCalendar();

        // Service worker registration for PWA
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('data:text/javascript;base64,')
                .catch(err => console.log('Service worker registration failed'));
        }
    </script>
